@model user
<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/wwwroot/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/wwwroot/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/wwwroot/lib/jquery/dist/jquery.js"></script>
    <script src="~/wwwroot/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/wwwroot/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>

<body style="background-color:lightgray">

    <form method="post">

        <div class="container">

            <div class="rwo" style="margin-top:10px">
                <div class="col-lg-2">
                    <h3>Login</h3>
                </div>
            </div>

            <div class="rwo" style="margin-top:10px">
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Please type username or email" asp-for="email" />

                </div>
            </div>

            <div class="rwo" style="margin-top:10px">
                <div class="col-lg-4 ">
                    <input type="password" class="form-control" placeholder="Please type passowrd" asp-for="ENCPassword" />

                </div>
            </div>

            <div class="rwo" style="margin-top:10px">
                <div class="col-lg-2 ">
                    <input type="submit" class="btn btn-primary" value="Login" asp-action="Login" />

                </div>
            </div>

            <div class="rwo" style="margin-top:10px;font-weight:bold">
                <div class="col-lg-6 ">
                   @ViewData["message"]

                </div>
            </div>
        </div>
</form>
</body>
</html>
